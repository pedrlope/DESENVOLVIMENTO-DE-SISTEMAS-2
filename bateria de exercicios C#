//EX1
static void EX1()

{
    int l = 0;
    double dois, um, soma;
    soma = 0;
    do
    {

        for (int i = 1; i <= 50; i++)
        {
            
            dois = 1000-3 * (i - 1);
            um = i;
            double fração =  dois/um;
            soma += fração;
            if (i % 2 == 0)
            {
                fração = -fração;
            }
            Console.WriteLine($"O valor {i} é {dois}/ {um} = {fração}");

        }
        Console.WriteLine($"a soma dos valores é: {soma}");
        Console.WriteLine($"digite 1 caso deseje parar");
        int escolha = Convert.ToInt32(Console.ReadLine());
        if (escolha == 1)
        {
            l = 1;
        }
        else
        {

        }
    }
    while (l == 0);
}
