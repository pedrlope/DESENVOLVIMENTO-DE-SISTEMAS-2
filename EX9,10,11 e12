static void exercicio9()
{
    int i = 1;
    while (i > 0)
    {

        Console.WriteLine("qual o exercicio");
        Console.WriteLine("1 - Utilizando operadores lógicos");
        Console.WriteLine("2 - Estruturas de seleção simples e repetição while");
        Console.WriteLine("3 - Estrutura de repetição while e variáveis");
        Console.WriteLine("4 - Contadores e incremento e while");
        Console.WriteLine("5 - Calcula média de notas de aluno");
        Console.WriteLine("6 - Recebe números com e extrai cada dígito");
        Console.WriteLine("7 - Aninhamento de escruturas de seleção");
        Console.WriteLine("8 - Soma dez primeiros números");
        int escolha1 = Convert.ToInt32(Console.ReadLine());
        switch (escolha1)
        {
            case 1:
                EX1();
                break;

            case 2:
                EX2();
                break;

            case 3:
                EX3();
                break;

            case 4:
                EX4();
                break;

            case 5:
                EX5();
                break;

            case 6:
                EX6();
                break;

            case 7:
                EX7();
                break;

            case 8:
                EX8();
                break;
        }

        static void EX1()
        {
            Console.Write("Digite o sexo (masculino/feminino): ");
            string sexo = Console.ReadLine().ToLower();

            if (sexo == "masculino")
            {
                Console.WriteLine("Sexo masculino.");
            }
            else if (sexo == "feminino")
            {
                Console.WriteLine("Sexo feminino.");
            }
            else
            {
                Console.WriteLine("Sexo não identificado.");
            }
        }

        static void EX2()
        {
            Console.Write("Digite um número menor ou igual a 50: ");
            int num = Convert.ToInt32(Console.ReadLine());

            if (num <= 50)
            {
                int resultado = num;
                while (resultado < 250)
                {
                    resultado *= 3;
                    Console.WriteLine("Resultado: " + resultado);
                }
            }
            else
            {
                Console.WriteLine("Número inválido.");
            }
        }

        static void EX3()
        {
            int i = 1;
            int soma = 0;
            while ( i < 10)
            {
                i++;
                Console.WriteLine("Digite a nota do aluno");
                int nota = Convert.ToInt32(Console.ReadLine());
                soma = +nota;
            }
            int media = soma / 10;
            Console.WriteLine($"a media é:{media}");
        }

        static void EX4()
        {
            int i = 1;
            while (i <= 10)
            {
                if (i % 2 != 0)
                {
                    Console.WriteLine(i);
                }
                i++;
            }
        }

        static void EX5()
        {
            Console.Write("Digite a primeira nota");
            double n1 = Convert.ToDouble(Console.ReadLine());

            Console.Write("Digite a segunda nota");
            double n2 = Convert.ToDouble(Console.ReadLine());

            double media = (n1 + n2) / 2;

            if (media >= 7)
            {
                Console.WriteLine($"Aprovado! Média {media}");
            }
            else if (media >= 4)
            {
                Console.WriteLine($"Em exame! Média {media}");
                Console.Write("Digite a nota do exame ");
                double exame = Convert.ToDouble(Console.ReadLine());
                media = (media + exame) / 2;
                if (media >= 5)
                {
                    Console.WriteLine($"Aprovado após exame. Média final {media}");
                }
                else
                {
                    Console.WriteLine($"Reprovado após exame. Média final {media}");
                }
            }
            else
            {
                Console.WriteLine($"Reprovado! Média: {media}");
            }
        }

        static void EX6()
        {
            Console.Write("Digite um número entre 1000 e 9999: ");
            int numero = Convert.ToInt32(Console.ReadLine());

            if (numero >= 1000 && numero <= 9999)
            {
                int milhar = numero / 1000;
                int centena = (numero % 1000) / 100;
                int dezena = (numero % 100) / 10;
                int unidade = numero % 10;

                Console.WriteLine($"Milhar: {milhar}");
                Console.WriteLine($"Centena: {centena}");
                Console.WriteLine($"Dezena: {dezena}");
                Console.WriteLine($"Unidade: {unidade}");
            }
            else
            {
                Console.WriteLine("Número fora do intervalo permitido.");
            }
        }

        static void EX7()
        {
            Console.Write("Digite a idade: ");
            int idade = Convert.ToInt32(Console.ReadLine());

            if (idade >= 0)
            {
                if (idade < 18)
                {
                    Console.WriteLine("Menor de idade.");
                }
                else
                {
                    Console.WriteLine("Maior de idade.");
                }
            }
            else
            {
                Console.WriteLine("Idade inválida.");
            }
        }

        static void EX8()
        {
            int i = 1, soma = 0;

            while (i <= 10)
            {
                soma += i;
                i++;
            }

            Console.WriteLine("Soma dos 10 primeiros números inteiros: " + soma);
        }
         

        Console.WriteLine("quer mudar de exercicio? Aperte 2 para sair");
        int escolha = Convert.ToInt32(Console.ReadLine());

        if (escolha == 2)
        {
            i = 0;
        }
        else
        {

        }
    }
}

static void exercicio10()
{
    int i = 1;
    while (i > 0)
    {

        Console.WriteLine("qual o exercicio");
        Console.WriteLine("1 -Calcula tabuada de um número");
        Console.WriteLine("2 - Lê valores e pede novos valores");
        Console.WriteLine("3 - Seleção composta encadeada e aninhada");
        Console.WriteLine("4 - Lê valores e conta os números negativos");
        Console.WriteLine("5 - Calcula média de idade");
        Console.WriteLine("6 - Calcula tempo");
        Console.WriteLine("7 - Gera números divisíveis");
        Console.WriteLine("8 - Média geral de alunos");
        Console.WriteLine("9 - Calcula média de turma de alunos");
        int escolha1 = Convert.ToInt32(Console.ReadLine());
        switch (escolha1)
        {
            case 1:
                EX1();
                break;

            case 2:
                EX2();
                break;

            case 3:
                EX3();
                break;

            case 4:
                EX4();
                break;

            case 5:
                EX5();
                break;

            case 6:
                EX6();
                break;

            case 7:
                EX7();
                break;

            case 8:
                EX8();
                break;

            case 9:
                EX9();
                break;
        }

        static void EX1()
        {
            Console.Write("Digite um número para ver sua tabuada: ");
            int numero = Convert.ToInt32(Console.ReadLine());

            int i = 1;
            while (i <= 10)
            {
                Console.WriteLine($"{numero} x {i} = {numero * i}");
                i++;
            }
        }

        static void EX2()
        {
            string continuar = "sim";

            while (continuar.ToLower() == "sim")
            {
                Console.Write("Digite um valor: ");
                string valor = Console.ReadLine();

                Console.Write("Deseja continuar? (sim/não): ");
                continuar = Console.ReadLine();
            }

            Console.WriteLine("Programa finalizado.");
        }
    }

        static void EX3()
        {
        int i = 0,maiorIdade = 0,totalMulheres = 0,mulheresVerdeLouro = 0;
        Console.WriteLine("com quantas pessoas foi feita a pesquisa?");
        int qtd = Convert.ToInt32(Console.ReadLine());

        while (i<qtd)
        {
            Console.Write("Digite a idade: ");
            int idade = Convert.ToInt32(Console.ReadLine());

            Console.Write("Digite o sexo (f/m): ");
            char sexo = Convert.ToChar(Console.ReadLine().ToLower());

            Console.Write("Cor dos cabelos (louro/castanho/preto): ");
            string cabelo = Console.ReadLine().ToLower();

            Console.Write("Cor dos olhos (azul/verde/castanho): ");
            string olhos = Console.ReadLine().ToLower();

            if (idade > maiorIdade)
            {
                maiorIdade = idade;
            }

            if (sexo == 'f')
            {
                totalMulheres++;
                if (idade >= 18 && idade <= 35 && cabelo == "louro" && olhos == "verde")
                {
                    mulheresVerdeLouro++;
                }
            }
        }
        double porcentagem = totalMulheres > 0 ? (mulheresVerdeLouro * 100.0) / totalMulheres : 0;
        Console.WriteLine($"Maior idade: {maiorIdade}");
        Console.WriteLine($"Porcentagem de mulheres com idade entre 18 e 35, cabelos louros e olhos verdes: {porcentagem}");
    }

        static void EX4()
        {
        int i = 0, negativos = 0;

        while (i < 5)
        {
            Console.Write($"Digite o valor {i + 1}: ");
            int valor = Convert.ToInt32(Console.ReadLine());

            if (valor < 0)
            {
                negativos++;
            }

            i++;
        }

        Console.WriteLine($"Total de valores negativos: {negativos}");
    }

        static void EX5()
        {
        int count = 0;
        Console.Write($"Digite a quantidade de pessoas ");
        int pessoas = Convert.ToInt32(Console.ReadLine());
        while (pessoas != 0)
        {
            Console.Write($"Digite a idade");
            int valor = Convert.ToInt32(Console.ReadLine());
            pessoas--;
            count += valor;
        }
        Console.WriteLine($"a media  da idade é :{count/pessoas}");
    }

        static void EX6()
        {
        int anos = 0;
        Console.WriteLine("digite o numero de habitantes do paísA");
        int paisA= Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("digite o numero de habitantes do paísB");
        int paisB = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("digite o a frequencia que o país A cresce");
        int paisAC = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("digite o a frequencia que o país B cresce");
        int paisBC = Convert.ToInt32(Console.ReadLine());
        if (paisA >= paisB)
        {
            Console.WriteLine("o país A já iguala a o país B");
        }
        if (paisA< paisB && paisAC <= paisBC)
        {
            Console.WriteLine("o país A nunca vai se igualar ou superar o número de habitantes do paísB");
        }
        while (paisA <= paisB)
        {
            paisA = (int)(paisA * paisAC);
            paisB = (int)(paisB * paisBC);
            anos++;
        }
        Console.WriteLine($"Serão necessários {anos} anos para que o país A ultrapasse ou iguale o país B.");
    }


        static void EX7()
    {
        int numero = 10, count = 0;

        while (numero <= 100)
        {
            if (numero % 11 == 5)
            {
                Console.WriteLine(numero);
            }
            numero++;
            count++;
        }
        Console.WriteLine($"a quantidade de números que são divisiveis por 11 com resto 5 é: {count}");
    }
        static void EX8()
