        //EX1
        static void EX1()

        {
            double numerador = 1000;
            double soma = 0;

            for (int i = 1; i <= 50; i++)
            {
                double termo = numerador / i;

                if (i % 2 == 0)
                {
                    termo *= -1;
                }

                Console.WriteLine($"Termo {i}: {numerador} / {i} = {termo}");
                soma += termo;
                numerador -= 3;
            }

            Console.WriteLine($"\nSoma total dos 50 termos: {soma}");
        }
        //EX1

        static void EX2()
        {
            int expoente = 0;

            while (expoente <= 15)
            {
                double formula = Math.Pow(3, expoente);
                Console.WriteLine($"3 elevado a 15 = {formula}");
                expoente++;
            }
        }

        static void EX3()
        {
            double totalPessoas = 2000, homensCount = 0, mulheresCount = 0, sim = 0, nao = 0, simmuler=0, simhomen=0, naomuler=0, naohomen=0;

            for (int i = 1; i <= totalPessoas; i++)
            {
                string sexo;

                Console.Write("Digite o sexo (m para masculino, f para feminino): ");
                sexo = Console.ReadLine().ToLower();


                if (sexo == "m")
                {
                    homensCount++;
                    Console.Write("Respondeu satisfeito com o produto? (s para sim, n para não): ");
                    string resposta = Convert.ToString(Console.ReadLine()).ToLower();

                    if (resposta == "s")
                    {
                        sim++;
                        simhomen++;
                    }
                    else if (resposta == "n")
                    {
                        nao++;
                        naohomen++;
                    }
                }

                else if (sexo == "f")
                {
                    mulheresCount++;
                    Console.Write("Respondeu satisfeito com o produto? (s para sim, n para não): ");
                    string resposta = Convert.ToString(Console.ReadLine()).ToLower();

                    if (resposta == "s")
                    {
                        sim++;
                        simmuler++;
                    }

                    else if (resposta == "n")
                    {
                        nao++;
                        naomuler++;
                    }
                }
            }
            Console.WriteLine($"a porcentagem de não foi:{(nao / 2000) * 100}");
            Console.WriteLine($"a porcentagem de sim foi:{(sim / 2000) * 100}");
            Console.WriteLine($"a porcentagem de mulheres que falaram sim foi:{(simmuler / mulheresCount) * 100}");
            Console.WriteLine($"a porcentagem de homens que falaram não foi:{(naohomen / homensCount) * 100}");
        }


