static void exercicio12()
{
    int i = 1;
    while (i > 0)
    {

        Console.WriteLine("qual o exercicio");
        Console.WriteLine("1 - Calcula a soma de termos de uma série");
        Console.WriteLine("2 - Petencia de 3 com variações");
        Console.WriteLine("3 - Pesquisa de satisfação");
        Console.WriteLine("4 - Soma de numeros de um intervalo");
        Console.WriteLine("5 - Média de uma turma");
        Console.WriteLine("6 - Juros compostos com MessageBox");
        Console.WriteLine("7 - Reajuste de salário");
        Console.WriteLine("8 - Repetição controlada por contador");
        Console.WriteLine("9 - Calcula bonus de uma faixa salarial");
        Console.WriteLine("10 - Lê número de faz multiplicações");
        int escolha1 = Convert.ToInt32(Console.ReadLine());
        switch (escolha1)
        {
            case 1:
                EX1();
                break;

            case 2:
                EX2();
                break;

            case 3:
                EX3();
                break;

            case 4:
                EX4();
                break;

            case 5:
                EX5();
                break;

            case 6:
                EX6();
                break;

            case 7:
                EX7();
                break;

            case 8:
                EX8();
                break;

            case 9:
                EX9();
                break;

            case 10:
                EX10();
                break;
        }
        //EX1
        static void EX1()

        {
            double numerador = 1000;
            double soma = 0;

            for (int i = 1; i <= 50; i++)
            {
                double termo = numerador / i;

                if (i % 2 == 0)
                {
                    termo *= -1;
                }

                Console.WriteLine($"Termo {i}: {numerador} / {i} = {termo}");
                soma += termo;
                numerador -= 3;
            }

            Console.WriteLine($"\nSoma total dos 50 termos: {soma}");
        }
        //EX1

        static void EX2()
        {
            int expoente = 0;

            while (expoente <= 15)
            {
                double formula = Math.Pow(3, expoente);
                Console.WriteLine($"3 elevado a 15 = {formula}");
                expoente++;
            }
        }

        static void EX3()
        {
            double totalPessoas = 2000, homensCount = 0, mulheresCount = 0, sim = 0, nao = 0, simmuler=0, simhomen=0, naomuler=0, naohomen=0;

            for (int i = 1; i <= totalPessoas; i++)
            {
                string sexo;

                Console.Write("Digite o sexo (m para masculino, f para feminino): ");
                sexo = Console.ReadLine().ToLower();


                if (sexo == "m")
                {
                    homensCount++;
                    Console.Write("Respondeu satisfeito com o produto? (s para sim, n para não): ");
                    string resposta = Convert.ToString(Console.ReadLine()).ToLower();

                    if (resposta == "s")
                    {
                        sim++;
                        simhomen++;
                    }
                    else if (resposta == "n")
                    {
                        nao++;
                        naohomen++;
                    }
                }

                else if (sexo == "f")
                {
                    mulheresCount++;
                    Console.Write("Respondeu satisfeito com o produto? (s para sim, n para não): ");
                    string resposta = Convert.ToString(Console.ReadLine()).ToLower();

                    if (resposta == "s")
                    {
                        sim++;
                        simmuler++;
                    }

                    else if (resposta == "n")
                    {
                        nao++;
                        naomuler++;
                    }
                }
            }
            Console.WriteLine($"a porcentagem de não foi:{(nao / 2000) * 100}");
            Console.WriteLine($"a porcentagem de sim foi:{(sim / 2000) * 100}");
            Console.WriteLine($"a porcentagem de mulheres que falaram sim foi:{(simmuler / mulheresCount) * 100}");
            Console.WriteLine($"a porcentagem de homens que falaram não foi:{(naohomen / homensCount) * 100}");
        }


        static void EX4()
        {
            int soma = 0;

            for (int i = 2; i <= 100; i++)
            {
                Console.WriteLine($"{i}");
                soma += i;
            }
            Console.WriteLine($" a soma é {soma}");
        }

        static void EX5()
        {

            double somaDasMedias = 0;

            for (int i = 1; i <= 10; i++)
            {
                Console.WriteLine($"Qual a media do aluno {i}");
                int mediaAluno = Convert.ToInt32(Console.ReadLine());
                somaDasMedias += mediaAluno;
            }
            double formula = somaDasMedias / 10;
            Console.WriteLine($"A media da clase = {formula}");


        }
        EX6();
        static void EX6()
        {
            Console.WriteLine($"Qual o tempo do emprestimo?Em meses");
            int t = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine($"Qual o interesse do emprestimo?");
            double indice = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine($"Qual o capital do emprestimo?");
            int c = Convert.ToInt32(Console.ReadLine());
            double resultado1 = 0;
            double resultado2 = 0;



            for (int i = 1; i <= t; i++)

            {
                double Juros = c * indice * i;
                double Montante = Juros + c;

                Console.WriteLine($"Mês {i}");
                Console.WriteLine($"O Juros é = {Juros}");
                Console.WriteLine($"O Montante é = {Montante}");
                resultado1 = Juros;
                resultado2 = Montante;
            }


        }

        static void EX7()
        {
            for (int i = 1; i <= 10; i++)
            {
                Console.WriteLine($"Funcionário {i}:");

                Console.Write("Informe o salário atual: R$ ");
                double salario = Convert.ToDouble(Console.ReadLine());

                Console.Write("Informe o percentual de reajuste (%): ");
                double percentual = Convert.ToDouble(Console.ReadLine());

                double reajuste = salario * (percentual / 100);
                double novoSalario = salario + reajuste;

                Console.WriteLine($"Reajuste: R$ {reajuste}");
                Console.WriteLine($"Novo salário: R$ {novoSalario}");
            }
        }

        static void EX8()
        {

            Console.WriteLine("Preparando o lançamento");

            for (int i = 10; i >= 1; i--)
            {
                Console.WriteLine($"{i}");
            }
            Console.WriteLine($"Decolando!");
        }

        static void EX9()
        {
            double totalBonus = 0;

            for (int i = 1; i <= 10; i++)
            {
                Console.WriteLine($"\nFuncionário {i}:");

                Console.Write("Informe o salário: R$ ");
                double salario = Convert.ToDouble(Console.ReadLine());

                double bonus = 0;

                
                if (salario <= 1000)
                {
                    bonus = salario * 0.20;
                }
                else if (salario <= 2000)
                {
                    bonus = salario * 0.15;
                }
                else if (salario <= 3000)
                {
                    bonus = salario * 0.10;
                }
                else
                {
                    bonus = salario * 0.05;
                }

                totalBonus += bonus;

                Console.WriteLine($"Bônus recebido: R$ {bonus}");
            }

            Console.WriteLine($"\nTotal geral de bônus pago: R$ {totalBonus}");
        }

        //EX10
        static void EX10()
        {
            Console.WriteLine("Qual número deseja multiplicar por 3?");
            int numero = Convert.ToInt32(Console.ReadLine());
            int soma = 0;
            int formula = numero * 3;
            for (int i = 0; i < 5; i++)
            {

                Console.WriteLine($" {numero} X 3 = {numero * 3}formula");
                soma += formula;
            }
            Console.WriteLine($" o resultado é {formula}");
        }



        Console.WriteLine("quer mudar de exercicio? Aperte 2 para sair");
        int escolha = Convert.ToInt32(Console.ReadLine());

        if (escolha == 2)
        {
            i = 0;
        }
        else
        {

        }
    }
}
