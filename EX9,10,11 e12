         for (int i =0; i < alunos; i++)
        {
            Console.WriteLine($"digite a nota do aluno {i}");
            int nota = Convert.ToInt32(Console.ReadLine());
            soma += nota;
        }
        Console.WriteLine($"a media da turma é :{soma/alunos}");
        }

