        static void EX2()
        {
             double totalPessoas = 200, homensCount = 0, mulheresCount = 0, sim = 0, nao = 0, simmuler=0, simhomen=0, naomuler=0, naohomen=0;

    for (int i = 1; i <= totalPessoas; i++)
    {
        string sexo;

        Console.Write("Digite o sexo (m para masculino, f para feminino): ");
        sexo = Console.ReadLine().ToLower();


        if (sexo == "m")
        {
            homensCount++;
            Console.Write("Respondeu satisfeito com o produto? (s para sim, n para não): ");
            string resposta = Convert.ToString(Console.ReadLine()).ToLower();

            if (resposta == "s")
            {
                sim++;
                simhomen++;
            }
            else if (resposta == "n")
            {
                nao++;
                naohomen++;
            }
        }

        else if (sexo == "f")
        {
            mulheresCount++;
            Console.Write("Respondeu satisfeito com o produto? (s para sim, n para não): ");
            string resposta = Convert.ToString(Console.ReadLine()).ToLower();

            if (resposta == "s")
            {
                sim++;
                simmuler++;
            }

            else if (resposta == "n")
            {
                nao++;
                naomuler++;
            }
        }
    }
    Console.WriteLine($"a porcentagem de não foi:{(nao / 200) * 100}");
    Console.WriteLine($"a porcentagem de sim foi:{(sim / 200) * 100}");
    Console.WriteLine($"a porcentagem de mulheres que falaram sim foi:{(simmuler / mulheresCount) * 100}");
    Console.WriteLine($"a porcentagem de homens que falaram não foi:{(naohomen / homensCount) * 100}");
}
}

        

        static void EX3()
        {
            double formula = 0;
            int parar = 1;
            do
            {
                Console.WriteLine("qual o seu salario?");
                double salario = Convert.ToDouble(Console.ReadLine());

                Console.WriteLine("voce é homem ou mulher?");
                string genero = Convert.ToString(Console.ReadLine());

                Console.WriteLine("à quanto tempo você trabalha?Em anos");
                int trabalho = Convert.ToInt32(Console.ReadLine());

                if ((genero == "Homem" || genero == "homem") && trabalho > 15)
                {
                    formula = salario * 0.2 + salario;
                }

                if ((genero == "Mulher" || genero == "mulher") && trabalho > 10)
                {
                    formula = salario * 0.25 + salario;
                }
                else
                {
                    formula = salario + 5000;
                }

                Console.WriteLine($"Seu salario é {formula}");

                Console.WriteLine("digite 1 para parar");
                int parou = Convert.ToInt32(Console.ReadLine());

                if (parou != 1)
                {

                }
                else
                {
                    parar = 0;
                }
            }
            while (parar == 1);
        }

        static void EX4()
        {
            int menorNumero = int.MaxValue; // Inicializa com o maior valor possível para int
            int R = 0;

            do
            {
                Console.WriteLine("Digite um número (ou digite 0 para sair):");
                int num = Convert.ToInt32(Console.ReadLine());

                // Verifica se o número digitado é menor que o menor número encontrado até agora
                if (num < menorNumero)
                {
                    menorNumero = num;
                }

            } while (true);

        }

