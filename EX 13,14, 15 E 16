        static void EX5e8()
        {
            bool boll = true;

            do
            {
                Console.WriteLine("quantos numeros vão ser rodados?");
                int numrodado = Convert.ToInt32(Console.ReadLine());
                for (int i = 0; i <= numrodado; i++)
                {
                    Console.WriteLine($"\n{i}");
                    Console.WriteLine("qual foi número digitado?");
                    int num = Convert.ToInt32(Console.ReadLine());
                    if (num != i)
                    {
                        boll = false;
                        break;
                    }
                }
            } while (boll);
        }

