        Console.WriteLine("5 – Testando a instrução break");
        Console.WriteLine("6 – Compara números");
        Console.WriteLine("7 – Bônus salarial");
        Console.WriteLine("8 – Testando instrução break");
        Console.WriteLine("9 – Cálculo de áreas de figuras geométricas");
        Console.WriteLine("10 – Números de votos por candidatos");
        int escolha1 = Convert.ToInt32(Console.ReadLine());
        switch (escolha1)
        {
            case 1:
                EX1();
                break;

            case 2:
