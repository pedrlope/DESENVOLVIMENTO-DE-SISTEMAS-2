        static void EX7()
        {
            Produto produto1 = new Produto("Teclado", 150.00m);
            Produto produto2 = new Produto("Celular", 1500.99m);
            Produto produto3 = new Produto("Laptop", 4500.50m);

            bool continuar = true;
            while (continuar)
            {
                Console.WriteLine("Digite a quantidade de dinheiro que você possui:");
                decimal dinheiro = Convert.ToDecimal(Console.ReadLine());

                Console.WriteLine("Escolha o produto que deseja verificar:");
                Console.WriteLine("1 - Teclado");
                Console.WriteLine("2 - Celular");
                Console.WriteLine("3 - Laptop");
                int opcao = Convert.ToInt32(Console.ReadLine());

                switch (opcao)
                {
                    case 1:
                        VerificarCompra(produto1, dinheiro);
                        break;
                    case 2:
                        VerificarCompra(produto2, dinheiro);
                        break;
                    case 3:
                        VerificarCompra(produto3, dinheiro);
                        break;
                    default:
                        Console.WriteLine("Opção inválida.");
                        break;
                }

                Console.WriteLine("Digite 1 para parar, qualquer outro número para continuar:");
                int parar = Convert.ToInt32(Console.ReadLine());
                if (parar == 1)
                {
                    continuar = false;
                }
            }
