static  void  EX6()
{
 int sim = 0, nao = 0, entrevistado = 1;

while (entrevistado <= 500)
{
    Console.Write($"Pessoa {entrevistado} – Gostou do produto? (s/n): ");
    string resposta = Console.ReadLine().ToLower();

    if (resposta == "s")
        sim++;
    else if (resposta == "n")
        nao++;

    entrevistado++;
}

Console.WriteLine($"Total que responderam 'sim': {sim}");
Console.WriteLine($"Total que responderam 'não': {nao}");
if(nao<sim)
{
Console.WriteLine($"A maioria respondeu com nao");
}
else
{
Console.WriteLine($"A maioria respondeu com sim");
}
}

static  void  EX7()
{
 int expoente = 0;

while (expoente <= 15)
{
    double potencia = Math.Pow(3, expoente);
    Console.WriteLine($"3^{expoente} = {potencia}");
    expoente++;
}

}

