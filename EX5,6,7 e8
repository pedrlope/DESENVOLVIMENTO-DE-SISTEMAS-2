            static void EX7()
            {

            Console.WriteLine("Digite a razão da PA:");
            int r = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine("Digite o número de termos:");
            int n = Convert.ToInt32(Console.ReadLine());
            int num1 = n-(n-1);

            int i = 0;
            while (i < n)
            {
                int formula = num1 + (r * n);
                Console.WriteLine($"termo{i+1} = {formula}");
            }
        }

            //MediaTurma
            static void EX8()
            {
                Console.WriteLine("Qual o numero de alunos?");
